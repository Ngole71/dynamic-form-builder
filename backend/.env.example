# Environment Variables Template for Form Builder Backend
# COPY this file to .env and fill in your actual values
# DO NOT commit .env files to Git - they contain sensitive information!

# SERVER CONFIGURATION
PORT=3000
NODE_ENV=development

# DATABASE CONFIGURATION - CHANGE THESE!
DB_HOST=localhost
DB_PORT=5432
DB_NAME=form_builder
DB_USER=your_postgres_username
DB_PASSWORD=your_secure_password_here

# FRONTEND CONFIGURATION
FRONTEND_URL=http://localhost:3002

# SECURITY (Optional - for future features)
JWT_SECRET=your_jwt_secret_min_32_characters_long
JWT_EXPIRES_IN=7d

# API CONFIGURATION (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760

# CORS CONFIGURATION (Optional)
CORS_ORIGINS=http://localhost:3002,http://localhost:3000

# LOGGING (Optional)
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# FEATURE FLAGS (Optional)
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false
SEED_SAMPLE_DATA=true

# DEVELOPMENT TOOLS (Optional)
DEBUG=form-builder:*